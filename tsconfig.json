{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "lib": [
        "ES2019.array",
        "ES2020.Promise"
    ]
  },
  "exclude": [
    "node_modules",
    "test"
  ],
  "typedocOptions": {
    "entryPoints": ["src/**/*.ts"],
    "out": "docs"
  }
}
